all: $(PROJECTS)

cg3lz: mstch
ifneq (,$(cg3lz_config))
	@echo "==== Building cg3lz ($(cg3lz_config)) ===="
	@${MAKE} --no-print-directory -C . -f cg3lz.make config=$(cg3lz_config)
endif

log_some:
ifneq (,$(log_some_config))
	@echo "==== Building log_some ($(log_some_config)) ===="
	@${MAKE} --no-print-directory -C . -f log_some.make config=$(log_some_config)
endif

mstch:
ifneq (,$(mstch_config))
	@echo "==== Building mstch ($(mstch_config)) ===="
	@${MAKE} --no-print-directory -C . -f mstch.make config=$(mstch_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f cg3lz.make clean
	@${MAKE} --no-print-directory -C . -f log_some.make clean
	@${MAKE} --no-print-directory -C . -f mstch.make clean

